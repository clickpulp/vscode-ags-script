{
  "name": "vscode-ags-script",
  "displayName": "AGS Script Language",
  "description": "Adventure Game Studio (AGS) scripting language support.",
  "version": "1.0.0-alpha.0",
  "author": {
    "name": "Clickpulp, LLC",
    "url": "https://clickpulp.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clickpulp/vscode-ags-script.git"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "agsscript",
        "aliases": [
          "AGS Script",
          "agsscript"
        ],
        "extensions": [
          ".asc",
          ".ash"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "agsscript",
        "scopeName": "source.agsscript",
        "path": "./syntaxes/agsscript.tmLanguage.json"
      }
    ]
  }
}
